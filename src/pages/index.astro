---
import Layout from '../layouts/Layout.astro';
import TechStack from '../components/TechStack';
import Timeline from '../components/Timeline';
import ProjectCard from '../components/ProjectCard';
import AboutMe from '../components/AboutMe';
import LearningPath from '../components/LearningPath';
import TechCarousel from '../components/TechCarousel';
import DailyChallenge from '../components/DailyChallenge';
import CourseSection from '../components/CourseSection';
import ProjectsGrid from '../components/ProjectsGrid';
import { FontAwesomeIcon } from '@fortawesome/react-fontawesome';
import { faArrowRight, faMapMarkerAlt, faCode, faRocket } from '@fortawesome/free-solid-svg-icons';
---

<Layout title="Sekhard.dev - Desarrollador Full Stack & Fundador de Spectrum Code">
  <!-- Hero Section with improved design -->
  <section class="relative min-h-[80vh] overflow-hidden bg-gradient-to-br from-primary-600 via-primary-700 to-primary-800 dark:from-primary-800 dark:via-primary-900 dark:to-primary-950">
    <!-- Animated background grid -->
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-grid-white/[0.05] bg-[size:60px_60px]"></div>
      <div class="absolute inset-0 bg-gradient-to-b from-black/0 via-black/0 to-primary-950/50"></div>
    </div>
    
    <!-- Tech carousel in background -->
    <div class="absolute inset-0">
      <TechCarousel client:load />
    </div>

    <!-- Glowing orbs effect -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-blue-500/30 rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/4 right-1/4 w-64 h-64 bg-purple-500/30 rounded-full blur-3xl"></div>
    </div>

    <div class="container mx-auto px-4 relative">
      <div class="min-h-[80vh] flex flex-col items-center justify-center text-center">
        <!-- Main heading -->
        <h1 class="text-5xl md:text-7xl font-bold mb-6 tracking-tight leading-tight">
          Recursos y Comunidad para
          <span class="block mt-2 text-transparent bg-clip-text bg-gradient-to-r from-blue-200 via-cyan-200 to-purple-200">
            Desarrolladores
          </span>
        </h1>

        <!-- Description -->
        <p class="text-xl md:text-2xl mb-12 text-primary-100 max-w-3xl mx-auto">
          Tutorías, recursos y herramientas para impulsar tu carrera como desarrollador.
          Únete a nuestra comunidad y crece junto a otros programadores.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-wrap gap-6 justify-center">
          <a
            href="#about"
            class="group px-8 py-4 bg-white text-primary-600 hover:bg-primary-50 rounded-xl font-medium transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg flex items-center gap-2"
          >
            <FontAwesomeIcon icon={faCode} className="w-5 h-5" />
            Conóceme
            <FontAwesomeIcon 
              icon={faArrowRight} 
              className="ml-1 transform translate-x-0 group-hover:translate-x-1 transition-transform"
            />
          </a>
          <a
            href="#spectrum"
            class="group px-8 py-4 bg-primary-700 hover:bg-primary-600 text-white rounded-xl font-medium transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg flex items-center gap-2"
          >
            <FontAwesomeIcon icon={faRocket} className="w-5 h-5" />
            Spectrum Code
            <FontAwesomeIcon 
              icon={faArrowRight} 
              className="ml-1 transform translate-x-0 group-hover:translate-x-1 transition-transform"
            />
          </a>
        </div>
      </div>
    </div>

    <!-- Curved divider -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 120" class="w-full h-[60px] fill-white dark:fill-gray-900">
        <path d="M0,64L80,69.3C160,75,320,85,480,80C640,75,800,53,960,48C1120,43,1280,53,1360,58.7L1440,64L1440,120L1360,120C1280,120,1120,120,960,120C800,120,640,120,480,120C320,120,160,120,80,120L0,120Z"></path>
      </svg>
    </div>
  </section>

  <!-- About Me Section -->
  <section id="about" class="py-20">
    <div class="container mx-auto px-4">
      <AboutMe client:load />
    </div>
  </section>

  <!-- Projects Section -->
  <section class="py-20 bg-gray-50 dark:bg-gray-800">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-4">Mis Proyectos</h2>
      <p class="text-gray-600 dark:text-gray-400 text-center mb-12 max-w-2xl mx-auto">
        Explora algunos de los proyectos en los que he trabajado
      </p>
      <ProjectsGrid client:load />
    </div>
  </section>

  <!-- Timeline Section -->
  <section id="timeline" class="py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-4">Mi Historia</h2>
      <p class="text-gray-600 dark:text-gray-400 text-center mb-12 max-w-2xl mx-auto">
        Desde mis inicios en INACAP hasta la fundación de Spectrum Code
      </p>
      <Timeline client:load />
    </div>
  </section>

  <!-- Daily Challenge Section -->
  <section class="py-20 bg-gray-50 dark:bg-gray-800">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-4">Reto del Día</h2>
      <p class="text-gray-600 dark:text-gray-400 text-center mb-12 max-w-2xl mx-auto">
        Mejora tus habilidades de programación con nuestro reto diario
      </p>
      <DailyChallenge client:load />
    </div>
  </section>

  <!-- Spectrum Code Section -->
  <section id="spectrum" class="py-20 bg-gradient-to-br from-primary-900 to-primary-950 text-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">Spectrum Code Software</h2>
        <p class="text-primary-100 text-lg">
          Una startup nacida en Osorno con la misión de transformar ideas en soluciones digitales innovadoras
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white/10 backdrop-blur-lg rounded-xl p-6">
          <h3 class="text-xl font-bold mb-4">Desarrollo Web</h3>
          <p class="text-primary-100">
            Creamos sitios web y aplicaciones modernas utilizando las últimas tecnologías
          </p>
        </div>
        <div class="bg-white/10 backdrop-blur-lg rounded-xl p-6">
          <h3 class="text-xl font-bold mb-4">Consultoría Tech</h3>
          <p class="text-primary-100">
            Asesoramos a empresas en su transformación digital y mejores prácticas de desarrollo
          </p>
        </div>
        <div class="bg-white/10 backdrop-blur-lg rounded-xl p-6">
          <h3 class="text-xl font-bold mb-4">Formación</h3>
          <p class="text-primary-100">
            Capacitamos a desarrolladores para potenciar sus habilidades técnicas
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .bg-grid-white {
    background-image: linear-gradient(to right, rgba(255, 255, 255, 0.1) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(255, 255, 255, 0.1) 1px, transparent 1px);
  }
</style>